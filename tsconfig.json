{
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "lib": ["DOM"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "emitDeclarationOnly": false
  },
  "exclude": ["tests", "examples"],
  "include": ["src"]
}
